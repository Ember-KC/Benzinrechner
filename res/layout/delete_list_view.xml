<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    tools:context=".UsageList"
    android:id="@+id/usageList">
    
    <ListView
  		android:id="@+id/delete_list"
  		android:layout_width="match_parent"
  		android:layout_height="wrap_content" >
  	        
	</ListView>
     
    <RelativeLayout 
	android:layout_width="fill_parent" android:layout_height="64dip"
	android:gravity="center_vertical" > 

		<CheckBox
		    android:id="@+id/deleteCheckbox"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true" />

	    <TextView
	        android:id="@+id/litersText"
	        android:textIsSelectable="false"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:layout_marginTop="4dip"
	        android:layout_marginLeft="4dip"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" 
	        android:layout_toRightOf="@id/deleteCheckbox"/>
	    <TextView
	        android:id="@+id/dateText" android:textIsSelectable="false"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:layout_marginLeft="4dip"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" 
	        android:layout_alignParentRight="true"/>
	    
</RelativeLayout>
    

</LinearLayout> 
